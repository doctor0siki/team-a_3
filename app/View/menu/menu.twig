{% block header_scripts_add %}
    <link rel="stylesheet" href="/assets/css/menu/index.css">
{% endblock %}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">TOP</a>
    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#Navber" aria-controls="Navber" aria-expanded="false" aria-label="ナビゲーションの切替">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="Navber">
        <ul class="navbar-nav mr-auto">
            {% if session.user_info  =="" %}
                <li class="nav-item">
                    <a class="nav-link" href="/login/">ログイン</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/register/">会員登録</a>
                </li>

            {% else %}
                {# ここに↓メニュー追加していく #}
                <li class="nav-item">
                    <a class="nav-link" href="/mypage/">マイページ</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout/">ログアウト</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/resign/">退会</a>
                </li>
            {% endif %}
            <li class="nav-item">
                <form class="menu-search-window" action="{{ path_for('result') }}" method="get">
                    <input class="menu-search-window_text-field" type="search" placeholder="Search" aria-label="Search" name="search">
                    <button class="menu-search-window_btn" type="submit">
                        <img class="menu-search-window_btn-image" src="/assets/images/public/search.svg" alt="検索">
                    </button>
                </form>
            </li>
        </ul>

        {% if session.user_info.name and current_path() == path_for('mypage') %}
            <ul class="navbar-nav text-right">
                <a class="nav-link" href="{{ path_for('post_video') }}">投稿</a>
            </ul>
        {% endif %}
        
        {# ログインしてたらユーザー名を出力する#}
        {% if session.user_info.name %}
            <ul class="navbar-nav text-right">
                {{ session.user_info.name }}さん
            </ul>
        {% endif %}
    </div><!-- /.navbar-collapse -->
</nav>
